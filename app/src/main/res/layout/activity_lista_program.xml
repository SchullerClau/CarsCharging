<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.schuller.carscharging.stations.ListaProgram">

    <include
        android:id="@+id/lista_programe_toolbar"
        layout="@layout/toolbar_layout" />

    <Button
        android:id="@+id/select_day_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lista_programe_toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_too"
        android:text="@string/select_day" />

    <ListView
        android:layout_margin="@dimen/margin_too"
        android:layout_below="@id/select_day_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

</RelativeLayout>
